    <authentication-manager>
		<authentication-provider>
			<jdbc-user-service data-source-ref="dataSource" 
			        users-by-username-query="select uname username,pwd password,enabled  from tuser where uname=?" 
			        authorities-by-username-query="select uname username,role role from tuserrole where uname=? "/>
		</authentication-provider>
	 </authentication-manager>
</beans:beans>
